@{
    ViewBag.Title = "Home Page";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Document Management System</title>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css" integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay" crossorigin="anonymous">

    @Scripts.Render("~/bundles/libs")
    @Scripts.Render("~/bundles/Contents")
    @Styles.Render("~/Content/css")
</head>
<body ng-app="rootApp" ng-controller="UserLoginController" >
    <div class="row border border-dark content">
        <div class="col-sm-3 left-layout">
            <div class="row align-items-center border border-primary user-login" >
                <user-login></user-login>
            </div>
            <div class="row border border-secondary left-navigation">
                
            </div>
            <div class="row border border-success action-1"></div>
            <div class="row border border-danger action-2"></div>
        </div>
        <div class="col-sm-9 border border-warning right-layout">
            <div class="row border border-info header"></div>
            <div class="row border border-success action-button">
                <add-document></add-document>
            </div>
            <div class="row border border-warning listing-information-area">
                <div class="col-sm-8 border border-primary listing"></div>
                <div class="col-sm-4 border border-dark information-area"></div>
            </div>
        </div>
    </div>
</body>
</html>